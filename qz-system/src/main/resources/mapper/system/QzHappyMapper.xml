    <sql id="selectQzHappyVo">
        select happy_id, happy_content, release_time, plan_release_time, distribute_flag, status, audit_by, audit_time, create_by, create_time, update_by, update_time, signature, remark, ext1, ext2, ext3 from qz_happy
    </sql>

    <select id="selectQzHappyList" parameterType="QzHappy" resultMap="QzHappyResult">
        <include refid="selectQzHappyVo"/>
        <where>  
            <if test="releaseTime != null "> and release_time = #{releaseTime}</if>
            <if test="planReleaseTime != null "> and plan_release_time = #{planReleaseTime}</if>
            <if test="distributeFlag != null  and distributeFlag != ''"> and distribute_flag = #{distributeFlag}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="auditBy != null  and auditBy != ''"> and audit_by = #{auditBy}</if>
            <if test="auditTime != null "> and audit_time = #{auditTime}</if>
        </where>
    </select>
    
    <select id="selectQzHappyByHappyId" parameterType="Long" resultMap="QzHappyResult">
        <include refid="selectQzHappyVo"/>
        where happy_id = #{happyId}
    </select>
        
    <insert id="insertQzHappy" parameterType="QzHappy" useGeneratedKeys="true" keyProperty="happyId">
