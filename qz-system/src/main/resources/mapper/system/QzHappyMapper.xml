    <update id="updateQzHappy" parameterType="QzHappy">
        update qz_happy
        <trim prefix="SET" suffixOverrides=",">
            <if test="happyContent != null and happyContent != ''">happy_content = #{happyContent},</if>
            <if test="releaseTime != null">release_time = #{releaseTime},</if>
