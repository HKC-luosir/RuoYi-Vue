<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.autoee.mapper.ABuildingMapper">
    
    <resultMap type="ABuilding" id="ABuildingResult">
        <result property="id"    column="id"    />
        <result property="buildingName"    column="building_name"    />
        <result property="schoolId"    column="school_id"    />
        <result property="buildingType"    column="building_type"    />
        <result property="Location"    column="Location"    />
        <result property="buildingArea"    column="building_area"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectABuildingVo">
        select id, building_name, school_id, building_type, Location, building_area, del_flag, create_by, create_time, update_by, update_time from a_building
    </sql>

    <select id="selectABuildingList" parameterType="ABuilding" resultMap="ABuildingResult">
        <include refid="selectABuildingVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="buildingName != null  and buildingName != ''"> and building_name like concat('%', #{buildingName}, '%')</if>
            <if test="schoolId != null "> and school_id = #{schoolId}</if>
            <if test="buildingType != null  and buildingType != ''"> and building_type = #{buildingType}</if>
            <if test="Location != null  and Location != ''"> and Location = #{Location}</if>
        </where>
		order by update_time desc, create_time desc
    </select>
    
    <select id="selectABuildingById" parameterType="Long" resultMap="ABuildingResult">
        <include refid="selectABuildingVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertABuilding" parameterType="ABuilding" useGeneratedKeys="true" keyProperty="id">
        insert into a_building
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="buildingName != null and buildingName != ''">building_name,</if>
            <if test="schoolId != null">school_id,</if>
            <if test="buildingType != null and buildingType != ''">building_type,</if>
            <if test="Location != null and Location != ''">Location,</if>
            <if test="buildingArea != null and buildingArea != ''">building_area,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="buildingName != null and buildingName != ''">#{buildingName},</if>
            <if test="schoolId != null">#{schoolId},</if>
            <if test="buildingType != null and buildingType != ''">#{buildingType},</if>
            <if test="Location != null and Location != ''">#{Location},</if>
            <if test="buildingArea != null and buildingArea != ''">#{buildingArea},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateABuilding" parameterType="ABuilding">
        update a_building
        <trim prefix="SET" suffixOverrides=",">
            <if test="buildingName != null and buildingName != ''">building_name = #{buildingName},</if>
            <if test="schoolId != null">school_id = #{schoolId},</if>
            <if test="buildingType != null and buildingType != ''">building_type = #{buildingType},</if>
            <if test="Location != null and Location != ''">Location = #{Location},</if>
            <if test="buildingArea != null and buildingArea != ''">building_area = #{buildingArea},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteABuildingById" parameterType="Long">
        delete from a_building where id = #{id}
    </delete>

    <delete id="deleteABuildingByIds" parameterType="String">
        delete from a_building where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>