<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.autoee.mapper.AFloorMapper">

    <resultMap type="AFloor" id="AFloorResult">
        <result property="id"    column="id"    />
        <result property="floorName"    column="floor_name"    />
        <result property="buildingId"    column="building_id"    />
        <result property="buildingName"    column="building_name"    />
        <result property="floorArea"    column="floor_area"    />
        <result property="roomCount"    column="room_count"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAFloorVo">
        select id, floor_name, building_id, floor_area, room_count, del_flag, create_by, create_time, update_by, update_time,
                  (select s.building_name from a_building s where s.id = t.building_id) as building_name
        from a_floor t
    </sql>

    <select id="selectAFloorList" parameterType="AFloor" resultMap="AFloorResult">
        <include refid="selectAFloorVo"/>
        <where>
            <if test="floorName != null  and floorName != ''"> and floor_name like concat('%', #{floorName}, '%')</if>
            <if test="buildingId != null "> and building_id = #{buildingId}</if>
            <if test="floorArea != null  and floorArea != ''"> and floor_area = #{floorArea}</if>
            <if test="roomCount != null "> and room_count = #{roomCount}</if>
        </where>
		order by update_time desc, create_time desc
    </select>

    <select id="selectAFloorById" parameterType="Long" resultMap="AFloorResult">
        <include refid="selectAFloorVo"/>
        where id = #{id}
    </select>

    <insert id="insertAFloor" parameterType="AFloor" useGeneratedKeys="true" keyProperty="id">
        insert into a_floor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="floorName != null and floorName != ''">floor_name,</if>
            <if test="buildingId != null">building_id,</if>
            <if test="floorArea != null and floorArea != ''">floor_area,</if>
            <if test="roomCount != null">room_count,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="floorName != null and floorName != ''">#{floorName},</if>
            <if test="buildingId != null">#{buildingId},</if>
            <if test="floorArea != null and floorArea != ''">#{floorArea},</if>
            <if test="roomCount != null">#{roomCount},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAFloor" parameterType="AFloor">
        update a_floor
        <trim prefix="SET" suffixOverrides=",">
            <if test="floorName != null and floorName != ''">floor_name = #{floorName},</if>
            <if test="buildingId != null">building_id = #{buildingId},</if>
            <if test="floorArea != null and floorArea != ''">floor_area = #{floorArea},</if>
            <if test="roomCount != null">room_count = #{roomCount},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAFloorById" parameterType="Long">
        delete from a_floor where id = #{id}
    </delete>

    <delete id="deleteAFloorByIds" parameterType="String">
        delete from a_floor where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
