<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.stu.mapper.StuInfoMaterialMapper">

    <resultMap type="StuInfoMaterial"    id="StuInfoMaterialResult">
        <id property="id"                   column="id"    />
        <result property="flag"             column="flag"/>
        <result property="url"              column="url" />
        <result property="createBy"         column="create_by"/>
        <result property="createTime"       column="createTime"/>
        <result property="updateBy"         column="updateBy"/>
        <result property="updateTime"       column="update_time"/>
        <association property="stuInfo"  javaType="StuInfo" >
            <id     property="stuId"        column="stuId"/>
            <result property="stuName"      column="stuName"    />
            <result property="stuCls"       column="stu_cls"    />
            <result property="stuClsYear"   column="stu_cls_year"    />
        </association>
        <association property="stuMaterial"  javaType="StuMaterial">
            <id     property="id"     column="materiaId"/>
            <result property="name"   column="name"/>
        </association>

    </resultMap>

    <sql id="selectStuInfoMaterialVo">
        select sim.id as 'id' ,sim.stu_id as 'stuId' ,sim.flag,sim.url,
               create_by,create_time,update_by,update_time,
               materia.id as 'materiaId', materia.name,
               stuInfo.stu_name as 'stuName',stuInfo.stu_cls , stuInfo.stu_cls_year ,stuInfo.stu_tel
        from stu_info_material sim
                 LEFT JOIN  stu_info stuInfo  on sim.stu_id = stuInfo.stu_id
                 LEFT JOIN  stu_material materia on sim.material_id = materia.id
    </sql>

    <select id="selectStuMaterialList" parameterType="BiyeForm" resultMap="StuInfoMaterialResult">
        <include refid="selectStuInfoMaterialVo"/>
        <where>
            <if test="biye.flag != null and biye.flag != '' "> sim.flag #{biye.flag}</if>
            <if test="biye.materialName != null and biye.materialName != '' "> materia.name #{biye.materialName}</if>
            <if test="biye.stuName != null and biye.stuName != '' "> stuInfo.stu_name like concat('%',#{biye.stuName},'%')</if>
            <if test="biye.stuCls != null and biye.stuCls != '' "> stuInfo.stu_cls like concat('%',#{biye.stuCls},'%')</if>
            <if test="biye.stuClsYear != null and biye.stuClsYear != '' "> stuInfo.stu_cls_year like concat('%',#{biye.stuClsYear},'%')</if>
        </where>
    </select>
    <select id="selectStuInfMaterialoById" resultType="com.ruoyi.stu.vo.StuInfoMaterial">
        <include refid="selectStuInfoMaterialVo"/>
        <where>
            sim.id = #{id}
        </where>
    </select>


    <insert id="insertStuMaterial" useGeneratedKeys="true" keyProperty="id">
        insert into stu_info_material
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="stuId != null">stu_id,</if>
            <if test="materialId != null">material_id,</if>
            <if test="flag != null">flag,</if>
            <if test="url != null">url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="stuId != null">#{stuId},</if>
            <if test="materialId != null">#{materialId},</if>
            <if test="flag != null">#{flag},</if>
            <if test="url != null">#{url},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateStuMaterial" >
        update stu_info_material
        <trim prefix="SET" suffixOverrides=",">
            <if test="stuId != null">stu_id = #{stuId},</if>
            <if test="materialId != null"> material_id =  #{materialId},</if>
            <if test="flag != null">flag = #{flag},</if>
            <if test="url != null">url = #{url},</if>
            <if test="createBy != null"> create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>
    <update id="updateImgUrl">
        update stu_info_material
        set
            url = #{url},
            update_by = #{updateBy},
            update_time = #{updateTime}
        where
           id = #{id}
    </update>

    <delete id="deleteStuInfoMaterialById">
        delete from stu_info_material where id = #{id}
    </delete>

    <delete id="deleteStuInfoMaterialByIds" >
        delete from stu_info_material where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>