<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gox.system.mapper.SlotMapper">
    
    <resultMap type="Slot" id="SlotResult">
        <result property="id"    column="id"    />
        <result property="itemId"    column="item_id"    />
        <result property="listType"    column="list_type"    />
        <result property="prepend"    column="prepend"    />
        <result property="append"    column="append"    />
        <collection property="options" column="id" select="com.gox.system.mapper.OptionsItemMapper.selectOptionsItemBySlotId"/>
    </resultMap>

    <sql id="selectSlotVo">
        select id, item_id, list_type, prepend, append from slot
    </sql>

    <select id="selectSlotList" parameterType="Slot" resultMap="SlotResult">
        <include refid="selectSlotVo"/>
        <where>  
            <if test="itemId != null "> and item_id = #{itemId}</if>
            <if test="listType != null "> and list_type = #{listType}</if>
            <if test="prepend != null  and prepend != ''"> and prepend = #{prepend}</if>
            <if test="append != null  and append != ''"> and append = #{append}</if>
        </where>
    </select>
    
    <select id="selectSlotById" parameterType="Long" resultMap="SlotResult">
        <include refid="selectSlotVo"/>
        where id = #{id}
    </select>
    <select id="selectSlotByItemId" resultType="com.gox.system.domain.form.Slot">
        <include refid="selectSlotVo"/>
        where item_id = #{itmeId}
    </select>

    <insert id="insertSlot" parameterType="Slot">
        insert into slot
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="itemId != null">item_id,</if>
            <if test="listType != null">list_type,</if>
            <if test="prepend != null">prepend,</if>
            <if test="append != null">append,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="itemId != null">#{itemId},</if>
            <if test="listType != null">#{listType},</if>
            <if test="prepend != null">#{prepend},</if>
            <if test="append != null">#{append},</if>
         </trim>
    </insert>

    <update id="updateSlot" parameterType="Slot">
        update slot
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="listType != null">list_type = #{listType},</if>
            <if test="prepend != null">prepend = #{prepend},</if>
            <if test="append != null">append = #{append},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSlotById" parameterType="Long">
        delete from slot where id = #{id}
    </delete>

    <delete id="deleteSlotByIds" parameterType="String">
        delete from slot where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>