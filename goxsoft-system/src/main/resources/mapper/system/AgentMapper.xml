<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gox.system.mapper.AgentMapper">
    
    <resultMap type="Agent" id="AgentResult">
        <result property="agentIdentifier"    column="agent_identifier"    />
        <result property="mdId"    column="md_id"    />
        <result property="agentName"    column="agent_name"    />
        <result property="agentType"    column="agent_type"    />
        <result property="agentBelongsTo"    column="agent_belongs_to"    />
    </resultMap>

    <sql id="selectAgentVo">
        select agent_identifier, md_id, agent_name, agent_type, agent_belongs_to from agent
    </sql>

    <select id="selectAgentList" parameterType="Agent" resultMap="AgentResult">
        <include refid="selectAgentVo"/>
        <where>  
            <if test="mdId != null "> and md_id = #{mdId}</if>
            <if test="agentName != null  and agentName != ''"> and agent_name like concat('%', #{agentName}, '%')</if>
            <if test="agentType != null  and agentType != ''"> and agent_type = #{agentType}</if>
            <if test="agentBelongsTo != null  and agentBelongsTo != ''"> and agent_belongs_to = #{agentBelongsTo}</if>
        </where>
    </select>
    
    <select id="selectAgentById" parameterType="Long" resultMap="AgentResult">
        <include refid="selectAgentVo"/>
        where agent_identifier = #{agentIdentifier}
    </select>
        
    <insert id="insertAgent" parameterType="Agent">
        insert into agent
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="agentIdentifier != null">agent_identifier,</if>
            <if test="mdId != null">md_id,</if>
            <if test="agentName != null">agent_name,</if>
            <if test="agentType != null">agent_type,</if>
            <if test="agentBelongsTo != null">agent_belongs_to,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="agentIdentifier != null">#{agentIdentifier},</if>
            <if test="mdId != null">#{mdId},</if>
            <if test="agentName != null">#{agentName},</if>
            <if test="agentType != null">#{agentType},</if>
            <if test="agentBelongsTo != null">#{agentBelongsTo},</if>
         </trim>
    </insert>

    <update id="updateAgent" parameterType="Agent">
        update agent
        <trim prefix="SET" suffixOverrides=",">
            <if test="mdId != null">md_id = #{mdId},</if>
            <if test="agentName != null">agent_name = #{agentName},</if>
            <if test="agentType != null">agent_type = #{agentType},</if>
            <if test="agentBelongsTo != null">agent_belongs_to = #{agentBelongsTo},</if>
        </trim>
        where agent_identifier = #{agentIdentifier}
    </update>

    <delete id="deleteAgentById" parameterType="Long">
        delete from agent where agent_identifier = #{agentIdentifier}
    </delete>

    <delete id="deleteAgentByIds" parameterType="String">
        delete from agent where agent_identifier in 
        <foreach item="agentIdentifier" collection="array" open="(" separator="," close=")">
            #{agentIdentifier}
        </foreach>
    </delete>
    
</mapper>