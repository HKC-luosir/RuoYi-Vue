<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gox.system.mapper.AutosizeMapper">
    
    <resultMap type="Autosize" id="AutosizeResult">
        <result property="id"    column="id"    />
        <result property="itemId"    column="item_id"    />
        <result property="minRows"    column="min_rows"    />
        <result property="maxRows"    column="max_rows"    />
    </resultMap>

    <sql id="selectAutosizeVo">
        select id, item_id, min_rows, max_rows from autosize
    </sql>

    <select id="selectAutosizeList" parameterType="Autosize" resultMap="AutosizeResult">
        <include refid="selectAutosizeVo"/>
        <where>  
            <if test="itemId != null "> and item_id = #{itemId}</if>
            <if test="minRows != null "> and min_rows = #{minRows}</if>
            <if test="maxRows != null "> and max_rows = #{maxRows}</if>
        </where>
    </select>
    
    <select id="selectAutosizeById" parameterType="Long" resultMap="AutosizeResult">
        <include refid="selectAutosizeVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertAutosize" parameterType="Autosize">
        insert into autosize
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="itemId != null">item_id,</if>
            <if test="minRows != null">min_rows,</if>
            <if test="maxRows != null">max_rows,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="itemId != null">#{itemId},</if>
            <if test="minRows != null">#{minRows},</if>
            <if test="maxRows != null">#{maxRows},</if>
         </trim>
    </insert>

    <update id="updateAutosize" parameterType="Autosize">
        update autosize
        <trim prefix="SET" suffixOverrides=",">
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="minRows != null">min_rows = #{minRows},</if>
            <if test="maxRows != null">max_rows = #{maxRows},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAutosizeById" parameterType="Long">
        delete from autosize where id = #{id}
    </delete>

    <delete id="deleteAutosizeByIds" parameterType="String">
        delete from autosize where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>