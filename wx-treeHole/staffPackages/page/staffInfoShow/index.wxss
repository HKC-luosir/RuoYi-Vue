page{
  background-color: #f8f8f9;
}
.stateBarView{
  width: 100%;
  position: fixed;
  top: 0;
  z-index: 999;
}
.stateBarView .stateBar{
  width: 100%;
}
.stateBarView .titleView{
  display:flex;
  align-items:center;
  justify-content:center;
  position: relative;
  color: #ffffff;
}
.stateBarIcoView{
  position: absolute;
  left: 0px;
}
.bgImg{
  width: 100%;
  background-color: #ffffff;
  overflow: hidden;
}
.bgImg image{
  width: 100%;
}
.scope_view{
  padding: 10px 0;
  background-color: #ffffff;
  border-radius: 10px;
  overflow: hidden;
}
.txView{
  width: 100px;
  height: 100%;
  position: relative;
}
.txView image{
  border-radius: 10px;
}
.txView view{
  width: 82px;
  padding: 2px 4px;
  font-size: 12px;
  color: #ffffff;
  position: absolute;
  bottom: -8px;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 10px;
}
.staffAudioPlay{
  width: 12px;
}
.staffAudioFrequency{
  width: 45px;
}
.staffName{
  font-size: 14px;
  font-weight: bold;
}
.staffBadgeLevel{
  font-size: 10px;
  font-weight: bold;
  color: #ffffff;
  padding: 2px 4px;
  border-radius: 10px;
}
.staffBadgeLevel image{
  width: 14px;
  margin-right: 4px;
}
.onLineState{
  font-size: 14px;
  color: #1c2438;
}
.onLineState image{
  width: 14px;
  height: 14px;
  margin-right: 4px;
}
.staffBaseInfo{
  font-size: 12px;
  color: #80848f;
  margin: 0 6px;
}
.staffService{
  font-size: 10px;
  background-color: #e9eaec;
  padding: 4px 6px;
  border-radius: 10px;
  margin-top: 6px;
}
.staffService text{
  margin: 0 6px;
}
.staffLabelItem{
  font-size: 10px;
  border-radius: 10px;
  margin-right: 8px;
  margin-top: 4px;
  padding: 0 4px;
}
.staffDetails{
  font-size: 13px;
  color: #495060;
}
.staffDetails span{
  color: #1c2438;
  font-weight: bold;
}
.imgView{
  width: 120px;
  height: 120px;
  border-radius: 5px;
  overflow: hidden;
  margin-right: 10px;
  display:inline-block;
}
.giftCover{
  width: 100px;
  display:inline-block;
  text-align: center;
}
.giftName{
  font-size: 14px;
  color: #80848f;
}
.giveBut{
  width: 50px;
  font-size: 14px;
  color: #ffffff;
  margin: 0 auto;
  margin-top: 10px;
  border-radius: 10px;
  padding: 2px 0;
}
.giftCover image{
  width: 50px;
}
#canvas{
  position: fixed;
  top: 0;
}
.animationView{
  width: 92%;
  margin: 0 auto;
}
.trendsItem{
  margin-top: 10px;
}
.trendsTime{
  font-size: 14px;
  color: #1c2438;
  font-weight: bold;
}
.trendsTitle{
  font-size: 14px;
  color: #495060;
}
.trendsOperItem{
  margin-right: 10px;
  font-size: 14px;
}
.trendsOperItem view{
  margin-left: 4px;
}
.trendsSingleImage{
  border-radius: 10px;
  margin-top: 10px;
}
.trendsImageMany{
  width: 32%;
  height: 90px;
  border-radius: 8px;
  margin-top: 10px;
}
.trendsVideo{
  margin-top: 10px;
  border-radius: 10px;
}
.audioBut{
  height: 20px;
  overflow: hidden;
  padding: 4px 10px;
  border-radius: 10px;
  color: #ffffff;
  font-size: 14px;
}
.audioPlay{
  width: 16px;
  margin-right: 10px;
}
.audioFrequency{
  width: 100px;
  margin-right: 10px;
}
.audioFrequencyGif{
  width: 100px;
  margin-right: 10px;
}
.commentUserInfoView{
  width: 100%;
  height: 50px;
}
.commentUserInfoView image{
  width: 50px;
  height: 50px;
  border-radius: 50px;
}
.commentService{
  font-size: 12px;
  color: #80848f;
}
.commentName{
  font-size: 14px;
  font-weight: bold;
}
.commentContent{
  margin-top: 10px;
  font-size: 14px;
}
.bottomView{
  width: 100%;
  height: 60px;
  background-color: #ffffff;
  position: fixed;
  bottom: 0;
}
.bottomOperView{
  width: 25%;
  height: 100%;
}