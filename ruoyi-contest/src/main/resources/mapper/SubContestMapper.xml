<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.contest.mapper.SubContestMapper">

    <resultMap type="SubContest" id="SubContestResult">
        <result property="subContestId"    column="sub_contest_id"    />
        <result property="contestId"    column="contest_id"    />
        <result property="name"    column="name"    />
        <result property="url"    column="url"    />
        <result property="attachmentsUrl"    column="attachments_url"    />
        <result property="year"    column="year"    />
        <result property="rank"    column="rank"    />
        <result property="competitionDate"    column="competition_date"    />
        <result property="fee"    column="fee"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSubContestVo">
        select sub_contest_id, contest_id, name, url, attachments_url, year, rank, competition_date, fee, remark, del_flag, create_by, create_time, update_by, update_time from t_sub_contest
    </sql>

    <select id="selectSubContestList2" parameterType="SubContestQueryVo" resultMap="SubContestResult">
        SELECT
	        sc.*
        FROM
            t_sub_contest sc
            LEFT JOIN t_contest_info c ON sc.contest_id = c.contest_id
        <where>
            <if test="inMinistry != null  and inMinistry != ''"> and c.in_ministry = #{inMinistry}</if>
            <if test="grade != null  and grade != ''"> and c.grade = #{grade}</if>
            <if test="name != null  and name != ''"> and sc.name like concat('%', #{name}, '%')</if>
            <if test="rank != null  and rank != ''"> and sc.rank = #{rank}</if>
        </where>
    </select>

    <select id="selectSubContestList" parameterType="SubContest" resultMap="SubContestResult">
        <include refid="selectSubContestVo"/>
        <where>
            <if test="contestId != null "> and contest_id = #{contestId}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="year != null "> and year = #{year}</if>
            <if test="rank != null  and rank != ''"> and rank = #{rank}</if>
            <if test="delFlag != null  and delFlag != ''"> and del_flag = #{delFlag}</if>
        </where>
    </select>



</mapper>
