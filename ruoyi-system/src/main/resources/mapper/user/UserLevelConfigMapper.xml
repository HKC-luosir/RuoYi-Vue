<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.user.mapper.UserLevelConfigMapper">

    <resultMap type="UserLevelConfig" id="UserLevelConfigResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="threshold"    column="threshold"    />
        <result property="level"    column="level"    />
        <result property="rechargeDiscount"    column="recharge_discount"    />
        <result property="icoUrl"    column="ico_url"    />
        <result property="avatarUrl"    column="avatar_url"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectUserLevelConfigVo">
        select id, name, threshold, level, recharge_discount, ico_url, avatar_url, create_by, create_time, update_by, update_time from bus_user_level_config
    </sql>

    <select id="selectUserLevelConfigList" parameterType="UserLevelConfig" resultMap="UserLevelConfigResult">
        <include refid="selectUserLevelConfigVo"/>
        <where>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
        order by level asc
    </select>

    <select id="selectUserLevelConfigById" parameterType="Long" resultMap="UserLevelConfigResult">
        <include refid="selectUserLevelConfigVo"/>
        where id = #{id}
    </select>

    <insert id="insertUserLevelConfig" parameterType="UserLevelConfig" useGeneratedKeys="true" keyProperty="id">
        insert into bus_user_level_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="threshold != null">threshold,</if>
            <if test="level != null">level,</if>
            <if test="rechargeDiscount != null">recharge_discount,</if>
            <if test="icoUrl != null">ico_url,</if>
            <if test="avatarUrl != null">avatar_url,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="threshold != null">#{threshold},</if>
            <if test="level != null">#{level},</if>
            <if test="rechargeDiscount != null">#{rechargeDiscount},</if>
            <if test="icoUrl != null">#{icoUrl},</if>
            <if test="avatarUrl != null">#{avatarUrl},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateUserLevelConfig" parameterType="UserLevelConfig">
        update bus_user_level_config
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="threshold != null">threshold = #{threshold},</if>
            <if test="level != null">level = #{level},</if>
            <if test="rechargeDiscount != null">recharge_discount = #{rechargeDiscount},</if>
            <if test="icoUrl != null">ico_url = #{icoUrl},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserLevelConfigById" parameterType="Long">
        delete from bus_user_level_config where id = #{id}
    </delete>

    <delete id="deleteUserLevelConfigByIds" parameterType="String">
        delete from bus_user_level_config where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
