<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.order.mapper.OrderCommentMapper">
    
    <resultMap type="OrderComment" id="OrderCommentResult">
        <result property="id"    column="id"    />
        <result property="orderId"    column="order_id"    />
        <result property="comment"    column="comment"    />
        <result property="ifShow"    column="if_show"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectOrderCommentVo">
        select id, order_id, comment, if_show, create_time from bus_order_comment
    </sql>

    <select id="selectOrderCommentList" parameterType="OrderComment" resultMap="OrderCommentResult">
        <include refid="selectOrderCommentVo"/>
        <where>  
            <if test="orderId != null "> and order_id = #{orderId}</if>
            <if test="comment != null  and comment != ''"> and comment like concat('%', #{comment}, '%')</if>
            <if test="ifShow != null  and ifShow != ''"> and if_show = #{ifShow}</if>
        </where>
    </select>
    
    <select id="selectOrderCommentById" parameterType="Long" resultMap="OrderCommentResult">
        <include refid="selectOrderCommentVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertOrderComment" parameterType="OrderComment" useGeneratedKeys="true" keyProperty="id">
        insert into bus_order_comment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="orderId != null">order_id,</if>
            <if test="comment != null">comment,</if>
            <if test="ifShow != null">if_show,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="orderId != null">#{orderId},</if>
            <if test="comment != null">#{comment},</if>
            <if test="ifShow != null">#{ifShow},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateOrderComment" parameterType="OrderComment">
        update bus_order_comment
        <trim prefix="SET" suffixOverrides=",">
            <if test="orderId != null">order_id = #{orderId},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="ifShow != null">if_show = #{ifShow},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOrderCommentById" parameterType="Long">
        delete from bus_order_comment where id = #{id}
    </delete>

    <delete id="deleteOrderCommentByIds" parameterType="String">
        delete from bus_order_comment where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>