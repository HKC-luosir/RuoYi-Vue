<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.LxTotalassetMapper">
    
    <resultMap type="LxTotalasset" id="LxTotalassetResult">
        <result property="riqi"    column="riqi"    />
        <result property="totalasset"    column="totalasset"    />
    </resultMap>

    <sql id="selectLxTotalassetVo">
        select riqi, totalasset from lx_totalasset
    </sql>

    <select id="selectLxTotalassetList" parameterType="LxTotalasset" resultMap="LxTotalassetResult">
        <include refid="selectLxTotalassetVo"/>
        <where>  
            <if test="riqi != null "> and riqi = #{riqi}</if>
            <if test="totalasset != null "> and totalasset = #{totalasset}</if>
        </where>
    </select>
    
    <select id="selectLxTotalassetByRiqi" parameterType="Date" resultMap="LxTotalassetResult">
        <include refid="selectLxTotalassetVo"/>
        where riqi = #{riqi}
    </select>
        
    <insert id="insertLxTotalasset" parameterType="LxTotalasset">
        insert into lx_totalasset
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="riqi != null">riqi,</if>
            <if test="totalasset != null">totalasset,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="riqi != null">#{riqi},</if>
            <if test="totalasset != null">#{totalasset},</if>
         </trim>
    </insert>

    <update id="updateLxTotalasset" parameterType="LxTotalasset">
        update lx_totalasset
        <trim prefix="SET" suffixOverrides=",">
            <if test="totalasset != null">totalasset = #{totalasset},</if>
        </trim>
        where riqi = #{riqi}
    </update>

    <delete id="deleteLxTotalassetByRiqi" parameterType="Date">
        delete from lx_totalasset where riqi = #{riqi}
    </delete>

    <delete id="deleteLxTotalassetByRiqis" parameterType="String">
        delete from lx_totalasset where riqi in 
        <foreach item="riqi" collection="array" open="(" separator="," close=")">
            #{riqi}
        </foreach>
    </delete>
</mapper>