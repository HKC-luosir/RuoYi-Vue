<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.MerchantAmountDetailMapper">

    <resultMap id="BaseResultMap" type="com.ruoyi.system.domain.MerchantAmountDetail">
            <id property="detailId" column="detail_id" jdbcType="BIGINT"/>
            <result property="merchantId" column="merchant_id" jdbcType="VARCHAR"/>
            <result property="operationType" column="operation_type" jdbcType="INTEGER"/>
            <result property="changeBefore" column="change_before" jdbcType="BIGINT"/>
            <result property="changeAmount" column="change_amount" jdbcType="BIGINT"/>
            <result property="changeAfter" column="change_after" jdbcType="BIGINT"/>
            <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
            <result property="describe" column="describe" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="modifyTime" column="modify_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        detail_id,merchant_id,operation_type,
        change_before,change_amount,change_after,
        order_id,`describe`,create_time,
        modify_time
    </sql>

    <select id="page" resultType="com.ruoyi.system.domain.vo.QueryAmountDetailPageVO">
        SELECT
            tmad.detail_id,
            tmad.merchant_id,
            tmad.operation_type,
            tmad.change_before,
            tmad.change_amount,
            tmad.change_after,
            tmad.amount_type,
            tmad.order_id,
            tmad.`describe`,
            tmad.create_time,
            tmad.modify_time
        FROM
        t_merchant_amount_detail tmad
        WHERE
        1 = 1
        <if test="dto.merchantId != null and dto.merchantId != ''">
            AND tmad.merchant_id = #{dto.merchantId}
        </if>
        <if test="dto.operationType != null">
            AND tmad.operation_type = #{dto.operationType}
        </if>
        <if test="dto.amountType != null">
            AND tmad.amount_type = #{dto.amountType}
        </if>
        <if test="dto.startTime != null and dto.startTime != ''">
            AND tmad.create_time &gt;= #{dto.startTime}
        </if>
        <if test="dto.endTime != null and dto.endTime != ''">
            AND tmad.create_time &lt;= #{dto.endTime}
        </if>
        order by tmad.create_time desc
    </select>

</mapper>
