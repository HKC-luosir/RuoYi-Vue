<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.platform.mapper.PlatformTextContentMapper">
    
    <resultMap type="PlatformTextContent" id="PlatformTextContentResult">
        <result property="id"    column="id"    />
        <result property="type"    column="type"    />
        <result property="content"    column="content"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectPlatformTextContentVo">
        select id, type, content, create_by, create_time, update_by, update_time from bus_platform_text_content
    </sql>

    <select id="selectPlatformTextContentList" parameterType="PlatformTextContent" resultMap="PlatformTextContentResult">
        <include refid="selectPlatformTextContentVo"/>
        <where>  
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
        </where>
    </select>
    
    <select id="selectPlatformTextContentById" parameterType="Long" resultMap="PlatformTextContentResult">
        <include refid="selectPlatformTextContentVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPlatformTextContent" parameterType="PlatformTextContent" useGeneratedKeys="true" keyProperty="id">
        insert into bus_platform_text_content
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="type != null">type,</if>
            <if test="content != null">content,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="type != null">#{type},</if>
            <if test="content != null">#{content},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updatePlatformTextContent" parameterType="PlatformTextContent">
        update bus_platform_text_content
        <trim prefix="SET" suffixOverrides=",">
            <if test="type != null">type = #{type},</if>
            <if test="content != null">content = #{content},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePlatformTextContentById" parameterType="Long">
        delete from bus_platform_text_content where id = #{id}
    </delete>

    <delete id="deletePlatformTextContentByIds" parameterType="String">
        delete from bus_platform_text_content where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>