<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.apollo.usv.mapper.CollectorMapper">
    
    <resultMap type="Collector" id="CollectorResult">
        <result property="id"    column="collector_id"    />
        <result property="sn"    column="collector_sn"    />
        <result property="manufacturer"    column="manufacturer"    />
        <result property="contact"    column="contact"    />
        <result property="purchaseDate"    column="purchase_date"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectCollectorVo">
        select collector_id, collector_sn, manufacturer, contact, purchase_date, status from usv_collector
    </sql>

    <select id="selectCollectorList" parameterType="Collector" resultMap="CollectorResult">
        <include refid="selectCollectorVo"/>
        <where>  
            <if test="sn != null  and sn != ''"> and collector_sn = #{sn}</if>
        </where>
    </select>
    
    <select id="selectCollectorById" parameterType="Long" resultMap="CollectorResult">
        <include refid="selectCollectorVo"/>
        where collector_id = #{id}
    </select>
        
    <insert id="insertCollector" parameterType="Collector" useGeneratedKeys="true" keyProperty="id">
        insert into usv_collector
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sn != null and sn != ''">collector_sn,</if>
            <if test="manufacturer != null">manufacturer,</if>
            <if test="contact != null">contact,</if>
            <if test="purchaseDate != null">purchase_date,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sn != null and sn != ''">#{sn},</if>
            <if test="manufacturer != null">#{manufacturer},</if>
            <if test="contact != null">#{contact},</if>
            <if test="purchaseDate != null">#{purchaseDate},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <update id="updateCollector" parameterType="Collector">
        update usv_collector
        <trim prefix="SET" suffixOverrides=",">
            <if test="sn != null and sn != ''">collector_sn = #{sn},</if>
            <if test="manufacturer != null">manufacturer = #{manufacturer},</if>
            <if test="contact != null">contact = #{contact},</if>
            <if test="purchaseDate != null">purchase_date = #{purchaseDate},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where collector_id = #{id}
    </update>

    <delete id="deleteCollectorById" parameterType="Long">
        delete from usv_collector where collector_id = #{id}
    </delete>

    <delete id="deleteCollectorByIds" parameterType="String">
        delete from usv_collector where collector_id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>