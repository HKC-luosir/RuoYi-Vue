<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gox.basic.mapper.FunctionBusinessMapper">
    
    <resultMap type="FunctionBusiness" id="FunctionBusinessResult">
        <result property="id"    column="id"    />
        <result property="businessType"    column="business_type"    />
        <result property="businessName"    column="business_name"    />
        <result property="businessBeginningDate"    column="business_beginning_date"    />
        <result property="businessEndingDate"    column="business_ending_date"    />
        <result property="businessDescription"    column="business_description"    />
        <result property="imageId"    column="image_id"    />
    </resultMap>

    <sql id="selectFunctionBusinessVo">
        select id, business_type, business_name, business_beginning_date, business_ending_date, business_description, image_id from function_business
    </sql>

    <select id="selectFunctionBusinessList" parameterType="FunctionBusiness" resultMap="FunctionBusinessResult">
        <include refid="selectFunctionBusinessVo"/>
        <where>  
            <if test="businessType != null  and businessType != ''"> and business_type = #{businessType}</if>
            <if test="businessName != null  and businessName != ''"> and business_name like concat('%', #{businessName}, '%')</if>
            <if test="businessBeginningDate != null  and businessBeginningDate != ''"> and business_beginning_date = #{businessBeginningDate}</if>
            <if test="businessEndingDate != null  and businessEndingDate != ''"> and business_ending_date = #{businessEndingDate}</if>
            <if test="businessDescription != null  and businessDescription != ''"> and business_description = #{businessDescription}</if>
            <if test="imageId != null "> and image_id = #{imageId}</if>
        </where>
    </select>
    
    <select id="selectFunctionBusinessById" parameterType="Long" resultMap="FunctionBusinessResult">
        <include refid="selectFunctionBusinessVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertFunctionBusiness" parameterType="FunctionBusiness">
        insert into function_business
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="businessType != null and businessType != ''">business_type,</if>
            <if test="businessName != null">business_name,</if>
            <if test="businessBeginningDate != null">business_beginning_date,</if>
            <if test="businessEndingDate != null">business_ending_date,</if>
            <if test="businessDescription != null">business_description,</if>
            <if test="imageId != null">image_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="businessType != null and businessType != ''">#{businessType},</if>
            <if test="businessName != null">#{businessName},</if>
            <if test="businessBeginningDate != null">#{businessBeginningDate},</if>
            <if test="businessEndingDate != null">#{businessEndingDate},</if>
            <if test="businessDescription != null">#{businessDescription},</if>
            <if test="imageId != null">#{imageId},</if>
         </trim>
    </insert>

    <update id="updateFunctionBusiness" parameterType="FunctionBusiness">
        update function_business
        <trim prefix="SET" suffixOverrides=",">
            <if test="businessType != null and businessType != ''">business_type = #{businessType},</if>
            <if test="businessName != null">business_name = #{businessName},</if>
            <if test="businessBeginningDate != null">business_beginning_date = #{businessBeginningDate},</if>
            <if test="businessEndingDate != null">business_ending_date = #{businessEndingDate},</if>
            <if test="businessDescription != null">business_description = #{businessDescription},</if>
            <if test="imageId != null">image_id = #{imageId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFunctionBusinessById" parameterType="Long">
        delete from function_business where id = #{id}
    </delete>

    <delete id="deleteFunctionBusinessByIds" parameterType="String">
        delete from function_business where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>