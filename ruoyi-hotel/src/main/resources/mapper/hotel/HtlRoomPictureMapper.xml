<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hotel.mapper.HtlRoomPictureMapper">
    
    <resultMap type="HtlRoomPicture" id="HtlRoomPictureResult">
        <result property="pictureId"    column="picture_id"    />
        <result property="hotelId"    column="hotel_id"    />
        <result property="picturePath"    column="picture_path"    />
        <result property="pictureName"    column="picture_name"    />
        <result property="orderNum"    column="order_num"    />
        <result property="status"    column="status"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectHtlRoomPictureVo">
        select picture_id, hotel_id, picture_path, picture_name, order_num, status, create_by, create_time, update_by, update_time from htl_room_picture
    </sql>

    <select id="selectHtlRoomPictureList" parameterType="HtlRoomPicture" resultMap="HtlRoomPictureResult">
        <include refid="selectHtlRoomPictureVo"/>
        <where>  
            <if test="hotelId != null "> and hotel_id = #{hotelId}</if>
            <if test="picturePath != null  and picturePath != ''"> and picture_path = #{picturePath}</if>
            <if test="pictureName != null  and pictureName != ''"> and picture_name like concat('%', #{pictureName}, '%')</if>
            <if test="orderNum != null "> and order_num = #{orderNum}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectHtlRoomPictureById" parameterType="Long" resultMap="HtlRoomPictureResult">
        <include refid="selectHtlRoomPictureVo"/>
        where picture_id = #{pictureId}
    </select>
        
    <insert id="insertHtlRoomPicture" parameterType="HtlRoomPicture" useGeneratedKeys="true" keyProperty="pictureId">
        insert into htl_room_picture
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="hotelId != null">hotel_id,</if>
            <if test="picturePath != null">picture_path,</if>
            <if test="pictureName != null">picture_name,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="status != null">status,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="hotelId != null">#{hotelId},</if>
            <if test="picturePath != null">#{picturePath},</if>
            <if test="pictureName != null">#{pictureName},</if>
            <if test="orderNum != null">#{orderNum},</if>
            <if test="status != null">#{status},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateHtlRoomPicture" parameterType="HtlRoomPicture">
        update htl_room_picture
        <trim prefix="SET" suffixOverrides=",">
            <if test="hotelId != null">hotel_id = #{hotelId},</if>
            <if test="picturePath != null">picture_path = #{picturePath},</if>
            <if test="pictureName != null">picture_name = #{pictureName},</if>
            <if test="orderNum != null">order_num = #{orderNum},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where picture_id = #{pictureId}
    </update>

    <delete id="deleteHtlRoomPictureById" parameterType="Long">
        delete from htl_room_picture where picture_id = #{pictureId}
    </delete>

    <delete id="deleteHtlRoomPictureByIds" parameterType="String">
        delete from htl_room_picture where picture_id in 
        <foreach item="pictureId" collection="array" open="(" separator="," close=")">
            #{pictureId}
        </foreach>
    </delete>
    
</mapper>