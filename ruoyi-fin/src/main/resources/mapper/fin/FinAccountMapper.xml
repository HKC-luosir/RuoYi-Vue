<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.fin.mapper.FinAccountMapper">
    
    <resultMap type="FinAccount" id="FinAccountResult">
        <result property="acctId"    column="acct_id"    />
        <result property="acctName"    column="acct_name"    />
        <result property="sortNum"    column="sort_num"    />
        <result property="userId"    column="user_id"    />
    </resultMap>

    <sql id="selectFinAccountVo">
        select acct_id, acct_name, sort_num, user_id from fin_account
    </sql>

    <select id="selectFinAccountList" parameterType="FinAccount" resultMap="FinAccountResult">
        <include refid="selectFinAccountVo"/>
        <where>  
            <if test="acctName != null  and acctName != ''"> and acct_name like concat('%', #{acctName}, '%')</if>
            <if test="sortNum != null "> and sort_num = #{sortNum}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectFinAccountByAcctId" parameterType="Long" resultMap="FinAccountResult">
        <include refid="selectFinAccountVo"/>
        where acct_id = #{acctId}
    </select>
        
    <insert id="insertFinAccount" parameterType="FinAccount" useGeneratedKeys="true" keyProperty="acctId">
        insert into fin_account
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="acctName != null">acct_name,</if>
            <if test="sortNum != null">sort_num,</if>
            <if test="userId != null">user_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="acctName != null">#{acctName},</if>
            <if test="sortNum != null">#{sortNum},</if>
            <if test="userId != null">#{userId},</if>
         </trim>
    </insert>

    <update id="updateFinAccount" parameterType="FinAccount">
        update fin_account
        <trim prefix="SET" suffixOverrides=",">
            <if test="acctName != null">acct_name = #{acctName},</if>
            <if test="sortNum != null">sort_num = #{sortNum},</if>
            <if test="userId != null">user_id = #{userId},</if>
        </trim>
        where acct_id = #{acctId}
    </update>

    <delete id="deleteFinAccountByAcctId" parameterType="Long">
        delete from fin_account where acct_id = #{acctId}
    </delete>

    <delete id="deleteFinAccountByAcctIds" parameterType="String">
        delete from fin_account where acct_id in 
        <foreach item="acctId" collection="array" open="(" separator="," close=")">
            #{acctId}
        </foreach>
    </delete>
</mapper>