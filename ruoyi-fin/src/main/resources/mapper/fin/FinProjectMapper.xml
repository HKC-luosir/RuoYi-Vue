<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.fin.mapper.FinProjectMapper">
    
    <resultMap type="FinProject" id="FinProjectResult">
        <result property="projId"    column="proj_id"    />
        <result property="projName"    column="proj_name"    />
        <result property="sortNum"    column="sort_num"    />
        <result property="userId"    column="user_id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectFinProjectVo">
        select proj_id, proj_name, sort_num, user_id, create_by, create_time, update_by, update_time, remark from fin_project
    </sql>

    <select id="selectFinProjectList" parameterType="FinProject" resultMap="FinProjectResult">
        <include refid="selectFinProjectVo"/>
        <where>  
            <if test="projName != null  and projName != ''"> and proj_name like concat('%', #{projName}, '%')</if>
            <if test="sortNum != null "> and sort_num = #{sortNum}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
        </where>
    </select>
    
    <select id="selectFinProjectByProjId" parameterType="Long" resultMap="FinProjectResult">
        <include refid="selectFinProjectVo"/>
        where proj_id = #{projId}
    </select>
        
    <insert id="insertFinProject" parameterType="FinProject" useGeneratedKeys="true" keyProperty="projId">
        insert into fin_project
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projName != null">proj_name,</if>
            <if test="sortNum != null">sort_num,</if>
            <if test="userId != null">user_id,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projName != null">#{projName},</if>
            <if test="sortNum != null">#{sortNum},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateFinProject" parameterType="FinProject">
        update fin_project
        <trim prefix="SET" suffixOverrides=",">
            <if test="projName != null">proj_name = #{projName},</if>
            <if test="sortNum != null">sort_num = #{sortNum},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where proj_id = #{projId}
    </update>

    <delete id="deleteFinProjectByProjId" parameterType="Long">
        delete from fin_project where proj_id = #{projId}
    </delete>

    <delete id="deleteFinProjectByProjIds" parameterType="String">
        delete from fin_project where proj_id in 
        <foreach item="projId" collection="array" open="(" separator="," close=")">
            #{projId}
        </foreach>
    </delete>
</mapper>